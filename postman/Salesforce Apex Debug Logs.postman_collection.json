    {
      "name": "ApexLog API",
      "item": [
        {
          "name": "Query Debug Logs",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "let query = `",
                  "",
                  "Select Id, StartTime from ApexLog order by StartTime DESC",
                  "",
                  "`",
                  "query = query.trim();",
                  "let encoded = encodeURIComponent(query);",
                  "pm.environment.set('QUERY',encoded);"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"200 Response Code\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "pm.test(\"Anonymous Apex Success Check\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success).to.eql(true);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{ORG_TOKEN}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [
              {
                "key": "",
                "value": "",
                "type": "text",
                "disabled": true
              }
            ],
            "url": {
              "raw": "{{ORG_URL}}{{ORG_API}}tooling/query?q={{QUERY}}",
              "host": ["{{ORG_URL}}{{ORG_API}}tooling"],
              "path": ["query"],
              "query": [
                {
                  "key": "q",
                  "value": "{{QUERY}}"
                }
              ]
            }
          },
          "response": []
        },
